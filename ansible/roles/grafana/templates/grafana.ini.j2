[server]
protocol = http
http_addr = 0.0.0.0
http_port = 3000
domain = {{ grafana_domain }}
root_url = %(protocol)s://%(domain)s:%(http_port)s/
serve_from_sub_path = false

[database]
type = postgres
host = {{ hostvars['postgres-01.' + domain]['ansible_host'] }}:5432
name = grafana
user = grafana
password = {{ grafana_db_password }}
ssl_mode = require

[security]
admin_user = {{ grafana_admin_user }}
admin_password = {{ grafana_admin_password }}
secret_key = {{ grafana_secret_key }}
disable_gravatar = false
cookie_secure = true
cookie_samesite = lax
allow_embedding = false

[users]
allow_sign_up = false
allow_org_create = false
auto_assign_org = true
auto_assign_org_role = Viewer
default_theme = dark

[auth]
disable_login_form = false
oauth_auto_login = false

[auth.ldap]
enabled = true
config_file = /etc/grafana/ldap.toml
allow_sign_up = true

[smtp]
enabled = true
host = smtp.{{ domain }}:587
user = grafana@{{ domain }}
password = {{ smtp_password }}
skip_verify = false
from_address = grafana@{{ domain }}
from_name = Grafana

[alerting]
enabled = true
execute_alerts = true

[metrics]
enabled = true
interval_seconds = 10

[log]
mode = console file
level = info
filters =

[log.console]
level = info
format = console

[log.file]
level = info
format = json
log_rotate = true
max_lines = 1000000
max_size_shift = 28
daily_rotate = true
max_days = 7

[analytics]
reporting_enabled = false
check_for_updates = false

[security]
admin_user = {{ grafana_admin_user }}
admin_password = {{ grafana_admin_password }}


